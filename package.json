{
  "name": "ravhub-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo: gestor de repositorios de paquetes (frontend + backend) â€” React+Vite + NestJS",
  "license": "MIT",
  "scripts": {
    "bootstrap": "pnpm install && pnpm -w -s --filter ./... run setup",
    "setup": "pnpm -w -s install",
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "dev:docker": "docker compose -f docker-compose.dev.yml up --build",
    "compose:dev:up": "docker compose -f docker-compose.dev.yml up --build --detach",
    "compose:dev:down": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "compose:license:up": "docker compose -f docker-compose.license-portal.yml up --build --detach",
    "compose:license:down": "docker compose -f docker-compose.license-portal.yml down --volumes --remove-orphans",
    "compose:both:up": "docker compose -f docker-compose.dev.yml -f docker-compose.license-portal.yml up --build --detach",
    "compose:both:down": "docker compose -f docker-compose.dev.yml -f docker-compose.license-portal.yml down --volumes --remove-orphans",
    "compose:ps": "docker compose -f docker-compose.dev.yml -f docker-compose.license-portal.yml ps",
    "compose:logs": "docker compose -f docker-compose.dev.yml -f docker-compose.license-portal.yml logs -f --tail 200",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "test:e2e:local": "bash test/run-e2e-with-compose.sh",
    "test:e2e": "bash test/run-e2e-with-compose.sh",
    "dev:bootstrap-and-test": "bash ./scripts/bootstrap-and-run-e2e.sh",
    "build": "pnpm -w -r run build",
    "verify:scripts": "node ./scripts/verify-scripts.js",
    "start": "pnpm --filter api --parallel start"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "form-data": "^4.0.5"
  }
}
